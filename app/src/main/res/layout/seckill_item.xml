<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_seckillItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_seckillTicket"
        android:layout_width="@dimen/goodsItemWidth"
        android:layout_height="@dimen/goodsItemHeight"
        android:src="@mipmap/logodarkpng"
         />

    <TextView
        android:id="@+id/tv_seckillNowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="¥20.00"
        android:textColor="@color/priceRed"
        android:textSize="20sp" />


    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tv_seckillOldPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="￥159.00"
            android:textColor="@color/priceDark"
            android:textSize="15sp" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@color/priceDark" />
    </RelativeLayout>


</LinearLayout>