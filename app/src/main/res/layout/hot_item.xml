<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_hotItem"
    android:layout_width="@dimen/goodsItemWidth"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="5dp">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_hotItemImg"
        android:layout_width="@dimen/goodsItemWidth"
        android:layout_height="@dimen/goodsItemWidth"
        android:src="@mipmap/logodarkpng" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_hotName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:lines="2"
        android:text="预售 刀剑神域桐人挂画  限时5折 限量1000份"
        android:textColor="@android:color/black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_hotPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="¥20.00"
        android:textColor="@color/priceRed"
        android:textSize="15sp" />

</LinearLayout>